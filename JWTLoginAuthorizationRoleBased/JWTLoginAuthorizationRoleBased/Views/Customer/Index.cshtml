@model IEnumerable<Customer>

<h2>Customers</h2>
<p>
    <a asp-action="Create" class="btn btn-outline-primary">Add New Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-outline-info">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
